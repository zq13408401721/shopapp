<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_gray_line"
        app:layout_constraintTop_toTopOf="parent"></View>
    <ImageView
        android:id="@+id/img_hot"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"></ImageView>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_hot"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="name"></TextView>
    <TextView
        android:id="@+id/txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="name"
        android:textColor="@color/color_gray_line"></TextView>
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_des"
        app:layout_constraintLeft_toRightOf="@id/img_hot"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="name"
        android:textColor="@color/colorAccent"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>